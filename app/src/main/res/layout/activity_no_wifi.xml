<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    android:gravity="center">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_semi_transparent" />

    <LinearLayout
        android:id="@+id/background_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/ic_no_wifi_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/circular_std_bold"
            android:includeFontPadding="false"
            android:text="@string/no_connection"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/circular_std_book"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/check_your_internet_connection_settings_n_and_try_again"
            android:textColor="@color/color_777776"
            android:textSize="@dimen/_9ssp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/checkConnectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:backgroundTint="@color/buttonColor"
            android:fontFamily="@font/circular_std_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:letterSpacing="0.01"
            android:minHeight="@dimen/_28sdp"
            android:padding="@dimen/_8sdp"
            android:text="@string/check_connection"
            android:textAllCaps="true"
            android:textSize="@dimen/_8ssp"
            app:cornerRadius="@dimen/_6sdp" />

    </LinearLayout>

</FrameLayout>