<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/color_F0F4F6"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/_145sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_rounded_white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_4sdp"
            android:paddingVertical="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPaymentError"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_scan_loyalty_card" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialogHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/inter_semibold"
                android:includeFontPadding="false"
                android:text="@string/pending_payment"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_7ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@font/inter_regular"
                android:includeFontPadding="false"
                android:text="@string/complete_your_payment_on_the_payment_terminal"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="@dimen/_6ssp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tryAgainMaterialButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/button_color"
                    android:fontFamily="@font/inter_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.01"
                    android:minWidth="@dimen/_50sdp"
                    android:minHeight="@dimen/_20sdp"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="@string/try_again"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="gone"
                    app:cornerRadius="@dimen/_4sdp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/joinLoyaltyProgramLinearLayout"
        android:layout_width="@dimen/_145sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@drawable/bg_rounded_small_corner_radius_white"
        android:minHeight="@dimen/_20sdp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_5sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTotalPrize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_semibold"
            android:includeFontPadding="false"
            android:text="@string/total_price"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_5ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTotalPrizeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/inter_semibold"
            android:includeFontPadding="false"
            android:text="@string/dummy_prize"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:textSize="@dimen/_6ssp" />

    </RelativeLayout>

</LinearLayout>
