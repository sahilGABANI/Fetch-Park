<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_9sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_grey_login_screen"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_18sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/circular_std_bold"
                android:text="@string/make_an_order"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_14sdp"
                android:fontFamily="@font/circular_std_book"
                android:gravity="center"
                android:text="@string/make_your_order_and_enjoy_our_delicious_n_cookies_and_cakes"
                android:textColor="@color/color_777776"
                android:textSize="@dimen/_7ssp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/proceedToMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/buttonColor"
                android:fontFamily="@font/circular_std_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:letterSpacing="0.02"
                android:minWidth="@dimen/_130sdp"
                android:minHeight="@dimen/_28sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="@string/proceed_to_menu"
                android:textAllCaps="true"
                android:textSize="@dimen/_8ssp"
                app:cornerRadius="@dimen/_6sdp"
                app:icon="@drawable/ic_next_icon"
                app:iconGravity="end"
                app:iconPadding="@dimen/_4sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>