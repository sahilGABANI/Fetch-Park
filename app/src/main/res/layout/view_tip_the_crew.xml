<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F0F4F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_list_background"
        android:orientation="vertical"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableStart="@drawable/ic_tip_crew"
            android:drawablePadding="@dimen/_4sdp"
            android:fontFamily="@font/inter_semibold"
            android:includeFontPadding="false"
            android:text="@string/tip_the_crew"
            android:textColor="@color/black"
            android:textSize="@dimen/_5ssp"
            app:textAllCaps="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/grey_DFE7EB" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fifteenPercentageTipAppCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/linear"
                android:layout_alignParentStart="true"
                android:background="@drawable/tip_background"
                android:fontFamily="@font/inter_medium"
                android:padding="@dimen/_6sdp"
                android:text="@string/_15"
                android:textSize="@dimen/_5ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/twentyPercentageTipAppCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/linear"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@id/fifteenPercentageTipAppCompatTextView"
                android:background="@drawable/tip_background"
                android:fontFamily="@font/inter_medium"
                android:padding="@dimen/_6sdp"
                android:text="@string/_20"
                android:textSize="@dimen/_5ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/twentyFivePercentageTipAppCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/linear"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@id/twentyPercentageTipAppCompatTextView"
                android:background="@drawable/tip_background"
                android:fontFamily="@font/inter_medium"
                android:padding="@dimen/_6sdp"
                android:text="@string/_25"
                android:textSize="@dimen/_5ssp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/applyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/linear"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-6dp"
                android:backgroundTint="@color/button_color"
                android:fontFamily="@font/inter_medium"
                android:includeFontPadding="false"
                android:letterSpacing="0.02"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/apply"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/_6ssp"
                app:cornerRadius="@dimen/_3sdp" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_toStartOf="@id/applyButton"
                android:minWidth="@dimen/_60sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:includeFontPadding="false"
                    android:text="@string/your_tip_amount"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_5ssp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/yourTipInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:minWidth="@dimen/_60sdp"
                    android:visibility="visible"
                    app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_4sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_4sdp"
                    app:boxCornerRadiusTopStart="@dimen/_4sdp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/yourTipEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        android:includeFontPadding="false"
                        android:inputType="number"
                        android:text="@string/_4"
                        android:textColor="@color/color_ADC2CC"
                        android:textColorHint="@color/grey"
                        android:textCursorDrawable="@color/hintColor"
                        android:textSize="@dimen/_5ssp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
